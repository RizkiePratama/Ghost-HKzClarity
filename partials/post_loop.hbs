
{{#foreach posts}}
                <article class="{{post_class}}">
                    <header>
                        <img class="thumbnail" src="{{img_url feature_image}}" alt="thumbnail {{title}}">
                        <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
                        <div class="meta">
                            <span>Posted by {{authors}} on 
                            <time datetime='{{date format="YYYY-MM-DD"}}'>{{date format="DD MMMM YYYY"}}</time></span>
                        </div>
                    </header>
                    <p class="excerpt">
                        {{excerpt words=60}}... <a href="{{url}}">Read More &raquo;</a>
                    </p>
                </article>
{{/foreach}}

{{pagination}}
